<div class="card-deck">
    <% @posts.each do |post| %>
        <div class="card mb-4">
        <div class="card-body">
            <%= link_to post do %>
                <h3 class="card-title"><%= post.title %></h3>
            <% end %>
            <h5 class="card-text"><%= post.body %> </h5>
        </div>
    </div>
    <% end %>
</div>